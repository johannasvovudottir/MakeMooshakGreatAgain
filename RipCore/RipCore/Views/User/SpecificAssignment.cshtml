@model RipCore.Models.ViewModels.AssignmentViewModel
<h3>@Html.DisplayFor(modelItem => Model.Title)</h3>
<table>
    <tbody>
        <tr>
            <td>Date Created: @Model.DateCreated</td>
            <td>Weight: @Model.Weight</td>
        </tr>
        <tr>
            <td>Due Date: @Model.DueDate</td>
            <td></td>
        </tr>
    </tbody>
</table>
<h4>Project Description</h4>
@Html.DisplayFor(modelItem => Model.Description)
@if (Model.IsTeacher)
{
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
}
@if (!Model.IsTeacher)
{
    @Html.ActionLink("Uplod File", "Upload", new { id = Model.ID })
}
@if (!Model.IsTeacher)
{
    @Html.AntiForgeryToken()
    <section>
        <div id="editor">
            function foo(items) {
            var x = "All this is syntax highlighted";
            return x;
            }
        </div>
    </section>
        <style type="text/css" media="screen">
            #editor {
                position: relative;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                height: 300px;
            }
        </style>
        @Html.HiddenFor(model => model.Solution)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" id="solutionButton" class="btn btn-default" />
        </div>
    </div>
    @Html.ActionLink("Save", "SubmitSolution", new { id = "solutionSubmit" })

}
<script src="https://rawgithub.com/ajaxorg/ace-builds/v1.1.8/src-min-noconflict/ace.js"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/twilight");
    editor.getSession().setMode("ace/mode/javascript");
</script>
<script>
    $(function () {
        console.debug("smuu");
        $('#solutionSubmit').hide();
        $('#solutionButton').click(function () {
            $('#Solution').val(editor.getValue())
            $('#solutionSubmit').click();
        });
    });
</script>