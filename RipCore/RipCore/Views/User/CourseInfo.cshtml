@model RipCore.Models.ViewModels.CourseViewModel
<h2>@Model.Name</h2>
<nav class="courses">
    <h3>Courses as Student</h3>
    <ul>
        @foreach (var item in Model.CoursesAsStudent)
    {
            <li>
                @Html.ActionLink(item.Name, "CourseDetails", new { id = item.ID })
            </li>
    }
    </ul>
    <h3>Courses as Teacher</h3>
    <ul>
        @foreach (var item in Model.CoursesAsTeacher)
    {
            <li>
                @Html.ActionLink(item.Name, "CourseDetails", new { id = item.ID })
            </li>
    }
    </ul>
</nav>
<main class="courseInfo">
    <h3>Assignments</h3>
    <ul>
        @foreach (var item in Model.Assignments)
        {
            <li>
                <h1>@item.Title</h1>
                <p>@item.Weight</p>
            </li>
        }
    </ul>
    <h3>All Students</h3>
    <ul>
        @foreach (var item in Model.Students)
        {
            <li>
                @item.FullName
            </li>
        }
    </ul>
    <h3>All Teachers</h3>
    <ul>
        @foreach (var item in Model.Teachers)
        {
            <li>
                @item.FullName
            </li>
        }
    </ul>
</main>
