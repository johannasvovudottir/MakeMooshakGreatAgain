@model RipCore.Models.ViewModels.CourseViewModel
<h2>Hello @Model.UserName</h2>
<h2>@Model.Name</h2>
<nav class="courses">
    <h3>Courses as Student</h3>
    @foreach (var item in Model.CoursesAsStudent)
    {
        <p>@Html.ActionLink(item.Name, "StudentOverview", new { id = item.ID })</p>
    }
    <h3>Courses as Teacher</h3>

    @foreach (var item in Model.CoursesAsTeacher)
    {
        <p>@Html.ActionLink(item.Name, "TeacherOverview", new { id = item.ID })</p>
    }
</nav>
<main class="courseInfo">
    <table>
        <thead>
            <tr>
                <th>
                    Teachers
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teachers)
            {
                <tr>
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        //TODO Info
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Assignments</h3>
    <table>
        <thead>
            <tr>
                <th>
                    Projoect
                </th>
                <th>
                    Due date
                </th>
                <th>
                    Weight
                </th>
                <th>
                    @if (Model.isTeacher == true)
                    {
                        <p>All Submissions</p>
                    }
                    @if (Model.isTeacher == false)
                    {
                        <p>Status</p>
                    }
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Assignments)
            {
                <tr>
                    <td>
                        @if (Model.isTeacher == true)
                        {
                            <h4>@Html.ActionLink(item.Title, "TeacherAssignmentView", new { id = item.ID })</h4>
                        }
                        @if (Model.isTeacher == false)
                        {
                            <h4>@Html.ActionLink(item.Title, "StudentAssignmentView", new { id = item.ID })</h4>
                        }
                    </td>
                    <td>
                        @item.DueDate
                    </td>
                    <td>
                        @item.Weight
                    </td>
                    <td>
                        @if (Model.isTeacher == true)
                        {
                            <h4>@Html.ActionLink("See submissions", "AllSubmissions", "Solution", new { id = item.ID })</h4>
                        }
                        @if (Model.isTeacher == false)
                        {
                            <h4>//TODO Status</h4>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>

@if (Model.isTeacher == true)
{
    @Html.ActionLink("New Project", "Create", new { id = Model.ID })
}

<div class="lists">
    <h3>All Students</h3>
    <ul>
        @foreach (var item in Model.Students)
        {
            <li>
                @item.FullName
            </li>
        }
    </ul>
    

</div>

