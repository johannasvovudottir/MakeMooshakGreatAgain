@model RipCore.Models.ViewModels.SolutionOverViewModel

@{
    ViewBag.Title = @Resources.Resources.allSolutions;
}
    @for (int i = 0; i < Model.MilestoneNames.Count; i++)
    {
        <h2>@Model.MilestoneNames[i]</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-2">
                        @Resources.Resources.User
                    </th>
                    <th class="col-md-offset-2 col-md-3">
                        @Resources.Resources.Submission
                    </th>
                    <th class="col-md-offset-2 col-md-3">
                        @Resources.Resources.Status
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.AssignmentSolutions[i])
                {
                    <tr>
                        <td class="col-md-2">
                            <h6>
                                Anonymous
                            </h6>
                        </td>
                        <td class="col-md-offset-2 col-md-3">
                            <h6>
                                @Html.ActionLink("See submission", "SubmissionDetails", new { id = item.CurrentBestID, isTeacher = true })
                            </h6>
                        </td>
                        <td class="col-md-offset-2 col-md-3">
                            <h6>
                                //TODO isAccepted
                            </h6>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }


